# OpenClaw Enterprise Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Security
JWT_SECRET=change-this-to-a-256-bit-secret-key-here
ENCRYPTION_KEY=change-this-to-another-256-bit-key-here

# PostgreSQL
DB_PASSWORD=change-this-postgres-password

# MongoDB
MONGO_PASSWORD=change-this-mongo-password

# Redis
REDIS_PASSWORD=change-this-redis-password

# Enterprise Extensions
ENABLE_SECURITY_CORE=true
ENABLE_COMPLIANCE_GDPR=true
ENABLE_COMPLIANCE_HIPAA=true
ENABLE_COMPLIANCE_SOC2=true
ENABLE_PERFORMANCE_OPTIMIZER=true

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=openclaw
DATABASE_USER=openclaw
DATABASE_POOL_SIZE=10

# MongoDB Configuration
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_DATABASE=openclaw
MONGO_AUTH_SOURCE=admin

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Compliance Settings
GDPR_DATA_RETENTION_DAYS=2555  # 7 years
HIPAA_AUDIT_RETENTION_YEARS=6
SOC2_LOG_RETENTION_DAYS=365

# Performance Settings
ENABLE_MEMORY_POOL=true
ENABLE_CONNECTION_POOL=true
ENABLE_MESSAGE_BATCHING=true
MEMORY_POOL_MAX_SIZE=10485760  # 10MB
CONNECTION_POOL_MAX=20
MESSAGE_BATCH_SIZE=100

# Security Settings
REQUIRE_DEVICE_AUTH=true
REQUIRE_SECURE_CONNECTION=true
ENFORCE_TLS=true
MIN_TLS_VERSION=1.2
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Legacy OpenClaw Settings (keep for compatibility)
OPENCLAW_GATEWAY_TOKEN=
CLAUDE_AI_SESSION_KEY=
CLAUDE_WEB_SESSION_KEY=
CLAUDE_WEB_COOKIE=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=
